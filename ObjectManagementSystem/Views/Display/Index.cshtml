        function myFunction(x) {
            var split = x.split('-');
            var nextDay = new Date(parseInt(split[0]), parseInt(split[1] - 1), parseInt(split[2]) + 2);
            nextDay = nextDay.toISOString().slice(0, 10);
            var z = document.getElementsByClassName("startDate");
            for (var i = 0; i < z.length; i++) {
                z[i].value = x;
            }
            var y = document.getElementsByClassName("endDate");
            for (var i = 0; i < y.length; i++) {
                y[i].value = nextDay;
                y[i].min = nextDay;
            }
        }
