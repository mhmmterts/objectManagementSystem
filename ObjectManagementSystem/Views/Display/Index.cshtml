                                    </div>
                                    <!-- Portfolio Modal - Image -->
                                    <img class="img-fluid rounded mb-5" src="@item.OBJECTIMAGE" alt="No image." onerror="this.src='https://i.hizliresim.com/9dl1li5.png'" style="float: left; width: 200px; height: 300px; max-width:200px; max-height:300px">
                                    <!-- Portfolio Modal - Text -->
                                    <h2>Detail:</h2>
                                    <div style="font-display:block;">
                                        <p style="font-size:14px;">@item.DETAIL</p>
                                    </div>
                                    <!--
                                    <button class="btn btn-primary" href="#" data-dismiss="modal">
                                        <i class="fas fa-times fa-fw"></i>
                                        Close Window
                                    </button>
                                        -->
                                    @if (item.RESERVATIONSTATUS != false)
                                    {
                                        <div class="row justify-content-center">
                                            @if (this.User.Identity.IsAuthenticated && !User.IsInRole("Admin") && !User.IsInRole("Employee"))
                                            {
                                                <form method="post" action="/Lend/ReserveObject">
                                                    <input class="form-control" style="margin-top:20px" type="text" value="@Session["ID"]" name="MEMBER" hidden />
                                                    <input class="form-control" style="margin-top:20px" type="text" value="@item.ID" name="OBJECT" hidden />
                                                    <label style="margin-top: 10px;font-size:14px"> &nbsp; Start Date of Reservation</label>
                                                    <input style="font-size:12px" class="form-control startDate" type="date" id="startDate" min="@DateTime.Now.ToString("yyyy-MM-dd")" onchange="myFunction(this.value)" oncl name="BORROWDATE" required />
                                                    <label style="margin-top: 10px; font-size: 14px"> &nbsp; End Date of Reservation</label>
                                                    <input style="font-size:12px" class="form-control endDate" min="@DateTime.Now.AddDays(1).ToString("yyyy-MM-dd")" id="endDate" type="date" name="RETURNDATE" required />
                                                    <br />
                                                    <button class="btn btn-info" style="font-size:12px" onclick="return confirm('Are you sure you want to reserve this object?')">
                                                        Reserve this Object
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    }
                                    else if (item.STATUS == false && this.User.Identity.IsAuthenticated)
                                    {
                                        string name = null;
                                        string email = null;
                                        string start = null;
                                        string end = null;
                                        foreach (var i in ViewBag.loanedObjects)
                                        {
                                            if (i.OBJECT == item.ID)
                                            {
                                                foreach (var j in ViewBag.members)
                                                {
                                                    if (i.MEMBER == j.ID)
                                                    {
                                                        name = j.NAME + " " + j.SURNAME;
                                                        email = j.EMAIL;
                                                        start = Convert.ToDateTime(i.BORROWDATE).ToString("dd/MM/yyyy");
                                                        end = Convert.ToDateTime(i.RETURNDATE).ToString("dd/MM/yyyy");
                                                        break;
                                                    }
                                                }
                                                break;
                                            }
                                        }
                                        <h2>Info:</h2>
                                        <div style="display:inline-block;text-align:left">
                                            <p style="font-size:16px;"><b>Item loaned by:</b> @name <br /><b>Email:</b> @email<br /><b>Borrow date:</b> @start<br /><b>Return date:</b> @end</p>
                                        </div>
                                    }
                                    else if (this.User.Identity.IsAuthenticated)
                                    {
                                        string name = null;
                                        string email = null;
                                        string start = null;
                                        string end = null;
                                        foreach (var i in ViewBag.reservedObjects)
                                        {
                                            if (i.OBJECT == item.ID)
                                            {
                                                foreach (var j in ViewBag.members)
                                                {
                                                    if (i.MEMBER == j.ID)
                                                    {
                                                        name = j.NAME + " " + j.SURNAME;
                                                        email = j.EMAIL;
                                                        start = Convert.ToDateTime(i.BORROWDATE).ToString("dd/MM/yyyy");
                                                        end = Convert.ToDateTime(i.RETURNDATE).ToString("dd/MM/yyyy");
                                                        break;
                                                    }
                                                }
                                                break;
                                            }
                                        }
                                        <h2>Info:</h2>
                                        <div style="display:inline-block;text-align:left">
                                            <p style="font-size:16px;"><b>Item reserved by:</b> @name <br /><b>Email:</b> @email<br /><b>Reservation start:</b> @start<br /><b>Reservation end:</b> @end</p>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
