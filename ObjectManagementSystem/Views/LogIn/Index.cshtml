<head>
    <title>TAU Store Login Form</title>
    <!-- meta tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="keywords" content="Art Sign Up Form Responsive Widget, Audio and Video players, Login Form Web Template, Flat Pricing Tables, Flat Drop-Downs, Sign-Up Web Templates,
		Flat Web Templates, Login Sign-up Responsive Web Template, Smartphone Compatible Web Template, Free Web Designs for Nokia, Samsung, LG, Sony Ericsson, Motorola Web Design" />
    <!-- /meta tags -->
    <!-- custom style sheet -->
    <link href="~/Content/Display/css/all.min.css" rel="stylesheet" />
    <link href="~/Content/LogIn/css/fontawesome-all.css" rel="stylesheet" />
    <link href="~/Content/LogIn/css/style.css" rel="stylesheet" />
    <!-- /custom style sheet -->
    <!-- google fonts-->
    <link href="//fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <!-- /google fonts-->
    <link rel="shortcut icon" href="~/Images/tau.ico" />

</head>


<body>
    <h1>TAU Store Login Form</h1>
    <!--Login formu baslangic-->
    <div class="w3l-login-form">
        <h2>Login Here</h2>
        @using (Html.BeginForm("Index", "LogIn", FormMethod.Post, new { @autocomplete = "off" }))
        {
            <div class=" w3l-form-group">
                <label>Username:</label>
                <div class="group">
                    <i class="fas fa-user"></i>
                    <input type="text" class="form-control" placeholder="Username" name="USERNAME" maxlength="20"  oninput="this.value = trim(this.value)" required="required" />
                </div>
            </div>
            <div class=" w3l-form-group">
                <label>Password:</label>
                <div class="group">
                    <i class="fas fa-unlock"></i>
                    <input type="password" class="form-control" placeholder="Password" name="PASSWORD" maxlength="20"  oninput="this.value = trim(this.value)" required="required" />
                </div>
            </div>

            <button type="submit" style="border-radius:0px">Login</button>
        }
        @if (@ViewBag.Message != null)
        {
            <div class="alert alert-danger" role="alert" style="width:50%;text-align:center;margin:auto;color:red;">
                <br>
                @ViewBag.Message
            </div>
        }
        <p class=" w3l-register-p">Don't have an account?<a href="~/Register/Index" class="register"> Register</a></p>
    </div>
    <!--Login formu bitis-->
    <footer>
        <p class="copyright-agileinfo"> &copy; 2018 Material Login Form. All Rights Reserved | Design by <a href="http://w3layouts.com">W3layouts</a></p>
    </footer>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/input.js"></script>
</body>

</html>