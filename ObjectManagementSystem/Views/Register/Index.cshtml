<!DOCTYPE html>
<html lang="en">

<head>
    <title>TAU Store Register Form</title>
    <!-- custom-theme -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <script type="application/x-javascript">
        addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false);
               function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- //custom-theme -->
    <!-- css files -->
    <link href="//fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i&amp;subset=devanagari,latin-ext" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i&amp;subset=cyrillic,cyrillic-ext,greek,greek-ext,latin-ext,vietnamese" rel="stylesheet">
    <link href="~/Content/Register/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/Register/css/style.css" rel="stylesheet" />
    <!-- //css files -->
    <link rel="shortcut icon" href="~/Images/tau.ico" />

</head>
<!-- body starts -->
<body>
    <!-- section -->
    <section class="register">
        <div class="register-full">
            <div class="register-right">
                <a href="/Display/Index" style="background-color:white;padding:2px 5px 2px 5px;"> <i class="fa fa-home"></i></a>
                <div class="register-in">
                    <h2><span class="fa fa-pencil"></span> register here</h2>
                    <div class="register-form">
                        <!--Kayit formu baslangic-->
                        <form action="~/Register/Index" method="post" autocomplete="off">
                            <div class="fields-grid">
                                <div class="styled-input agile-styled-input-top">
                                    <input type="text" name="NAME" onkeypress="return isNumericKey(event)" onchange="this.value = trim(this.value)" maxlength="20" value="@ViewBag.Name" required>
                                    <label>First Name</label>
                                    <span></span>
                                </div>
                                <div class="styled-input agile-styled-input-top">
                                    <input type="text" name="SURNAME" onkeypress="return isNumericKey(event)" oninput="this.value = trim(this.value)" value="@ViewBag.Surname" maxlength="20" required>
                                    <label>Last Name</label>
                                    <span></span>
                                </div>
                                <div class="styled-input">
                                    <input type="email" name="EMAIL" maxlength="50" value="@ViewBag.Email" required>
                                    <label>Email</label>
                                    <span></span>
                                    @if (@ViewBag.EmailAlert != null)
                                    {
                                        <div class="alert alert-danger" role="alert" style="width: 50%; font-size: 12px;text-align:center; margin: auto; color: red;">
                                            @ViewBag.EmailAlert
                                        </div>
                                    }
                                </div>
                                <div class="styled-input agile-styled-input-top">
                                    <input type="text" name="USERNAME" maxlength="20" oninput="this.value = trim(this.value)" value="@ViewBag.Username" required>
                                    <label>Username</label>
                                    <span></span>
                                    @if (@ViewBag.UsernameAlert != null)
                                    {
                                        <div class="alert alert-danger" role="alert" style="width: 50%; font-size: 12px;text-align:center; margin: auto; color: red;">
                                            @ViewBag.UsernameAlert
                                        </div>
                                    }
                                </div>
                                <div class="styled-input">
                                    <input type="password" name="PASSWORD" minlength="6" maxlength="20" oninput="this.value = trim(this.value)" value="@ViewBag.Password" required>
                                    <label>Password</label>
                                    <span></span>
                                </div>
                                <div class="styled-input">
                                    <input type="text" name="TELNUMBER" onInput="this.value = phoneFormat(this.value)" pattern=".{14,14}" value="@ViewBag.Phone" required>
                                    <label>Phone Number</label>
                                    <span></span>
                                </div>


                                <div class="clear"> </div>
                            </div>
                            <input type="submit" value="Register">
                        </form>
                        <!--Kayit formu bitis-->
                    </div>
                </div>
                <div class="clear"> </div>
            </div>
            <div class="clear"> </div>
        </div>
        <!-- copyright -->
        <p class="agile-copyright">© 2018 Course Register Form. All Rights Reserved | Design by <a href="https://w3layouts.com/" target="_blank">W3layouts</a></p>
        <!-- //copyright -->
    </section>
    <!-- //section -->
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/input.js"></script>
</body>
<!-- //body ends -->

</html>
