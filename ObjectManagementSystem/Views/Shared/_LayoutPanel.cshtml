
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Profil Page</title>
    <link href="~/Content/LayoutPanel.css" rel="stylesheet" />
    <link href="~/Content/messageIndex.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/Images/tau.ico" />
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!--Kullanici paneli yan menu baslangic-->
        <div class="border-end bg-white" id="sidebar-wrapper">
            <div class="sidebar-heading border-bottom bg-light">TAU Store</div>
            <div class="list-group list-group-flush">
                <a class="list-group-item list-group-item-action list-group-item-light p-3" href="~/Display/Index">Home Page </a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" href="~/Panel/Index">My Profile</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" href="~/Panel/ReservedItems">Reserved Items</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" href="~/Panel/LoanedItems">Loaned Items</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" href="~/Message/Index">My Messages</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" href="~/Message/NewMessage">New Message</a>
            </div>
        </div>
        <!--Kullanici paneli yan menu bitis-->
        <div id="page-content-wrapper">
            <!--Kullanici paneli ust menu baslangic-->
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-primary" id="sidebarToggle">Toggle Menu</button>
                    <div style="margin-left:15px"><b>User Panel</b></div>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                            <li class="nav-item active"><a class="nav-link" href="~/Panel/LogOut">Exit</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!--Kullanici paneli ust menu bitis-->
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/LayoutPanel.js"></script>
    <script src="~/Scripts/input.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
</body>
</html>
